# =============================================================================
# DIGANTARA INSTRUMENT CONTROL - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize for your environment
# The .env file is git-ignored and will not be committed
#
# Security Note: NEVER commit .env file to version control!
# =============================================================================

# =============================================================================
# VISA/SCPI COMMUNICATION SETTINGS
# =============================================================================

# VISA timeout in milliseconds (1000-300000)
VISA_TIMEOUT_MS=10000

# Delay between SCPI commands in seconds
VISA_COMMAND_DELAY=0.1

# VISA backend: leave empty for default, or use 'py' for pyvisa-py
# VISA_BACKEND=
# VISA_BACKEND=py

# =============================================================================
# INSTRUMENT-SPECIFIC TIMING (Advanced)
# =============================================================================

# Power Supply Timing
PSU_RESET_TIME=3.0
PSU_VOLTAGE_SETTLING_TIME=0.5
PSU_CURRENT_SETTLING_TIME=0.5
PSU_OUTPUT_ENABLE_TIME=0.7

# DMM Timing
DMM_RESET_TIME=2.0
DMM_MEASUREMENT_TIMEOUT=30000

# Oscilloscope Timing
SCOPE_AUTOSCALE_TIME=2.0
SCOPE_DIGITIZE_TIME=0.5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty for console-only logging)
# LOG_FILE=logs/instrument_control.log

# Maximum log file size before rotation (bytes)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# WEB INTERFACE (GRADIO) CONFIGURATION
# =============================================================================

# Gradio server port
GRADIO_SERVER_PORT=7860

# Gradio server host
# Use 127.0.0.1 for localhost only (secure)
# Use 0.0.0.0 to allow external connections (less secure)
GRADIO_SERVER_HOST=127.0.0.1

# =============================================================================
# AUTHENTICATION (PRODUCTION DEPLOYMENT)
# =============================================================================

# Enable Gradio authentication (true/false)
GRADIO_AUTH_ENABLED=false

# Authentication credentials (REQUIRED if auth enabled)
# IMPORTANT: Use strong passwords in production!
GRADIO_USERNAME=admin
GRADIO_PASSWORD=

# =============================================================================
# SSL/TLS CONFIGURATION (HTTPS)
# =============================================================================

# Enable HTTPS (true/false)
GRADIO_SSL_ENABLED=false

# SSL certificate and key files (REQUIRED if SSL enabled)
# SSL_CERTFILE=certs/cert.pem
# SSL_KEYFILE=certs/key.pem

# =============================================================================
# DATA STORAGE AND EXPORT
# =============================================================================

# Base directories for data storage
DATA_EXPORT_DIR=./data
SCREENSHOT_DIR=./screenshots
WAVEFORM_DIR=./waveforms

# Maximum data points to store in memory (affects RAM usage)
MAX_DATA_POINTS=10000

# =============================================================================
# THREADING AND PERFORMANCE
# =============================================================================

# Number of worker threads
WORKER_THREADS=3

# Queue size for thread communication
QUEUE_SIZE=100

# Measurement polling interval in seconds
MEASUREMENT_INTERVAL=1.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Maximum file upload size in bytes
MAX_UPLOAD_SIZE=10485760

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.csv,.txt,.json,.png,.jpg

# Enable input validation (recommended: true)
ENABLE_INPUT_VALIDATION=true

# =============================================================================
# DEVELOPMENT VS PRODUCTION
# =============================================================================

# For local development:
# - Use LOG_LEVEL=DEBUG
# - Use GRADIO_SERVER_HOST=127.0.0.1
# - Set GRADIO_AUTH_ENABLED=false

# For production deployment:
# - Use LOG_LEVEL=WARNING or ERROR
# - Use GRADIO_SERVER_HOST=0.0.0.0 (if external access needed)
# - Set GRADIO_AUTH_ENABLED=true with strong password
# - Set GRADIO_SSL_ENABLED=true with valid certificates
# - Consider firewall rules and network security
